= simple_form_for camera, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= legend

    = f.input :name
    = f.input :brand, input_html: { :class => 'brand-typeahead', :data => { 'typeahead-link' => brand_typeahead_url } }

    %div.form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t("form.button.cancel"), :back, :class => 'btn'
