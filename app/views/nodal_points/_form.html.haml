= simple_form_for nodal_point, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend= legend

    = f.association :camera, :collection => nodal_point.user.cameras.all
    = f.association :lens, :collection => nodal_point.user.lenses.all
    = f.input :focal_length
    = f.input :offset

    %div.form-actions
      = f.button :submit, :class => 'btn-primary'
      = link_to t("form.button.cancel"), :back, :class => 'btn'
